<p id="notice"><%= notice %></p>
<h1>Listing IPF diagnoses</h1>
<div class = "row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Case</th>
        <th>Experts</th>
        <th>IPF expert<br/> (threshold 70%)</th>
        <th>Non expert</th>
        <th>IPF non expert<br/> (threshold 70%)</th>
      </tr>
      </thead>
      <tbody>
       <% i = 1 %>
        <% @scores.each do |a|  %>
          <tr>
            <td><%= i %></td>
            <td><%= ((a[0][i][0].to_f)*100/((Score.expert.count)/60)).round(1)  %></td>
            <td><% if ((a[0][i][0].to_f)*100/((Score.expert.count)/60)).round(1) >= 70 %>
                    IPF
                <% end  %>
            </td>
            <td><%= ((a[0][i][1].to_f)*100/((Score.novice.count)/60)).round(1)   %></td>
            <td><% if ((a[0][i][1].to_f)*100/((Score.novice.count)/60)).round(1) >= 70 %>
                  IPF
              <% end  %>
            </td>
          </tr>
          <% i = i + 1 %>
        <% end  %>
      </tbody>
    </table>
  </div>
</div>

