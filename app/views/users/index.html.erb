<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<div class = "row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Number</th>
        <th>First name</th>
        <th>Last name</th>
        <th>email</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% i = 1 %>
      <% @users.each do |user| %>
          <tr>
            <td><%= i %></td>
            <td><%= user.first_name.titleize if user.first_name %></td>
            <td><%= user.last_name.titleize if user.last_name  %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% i = 1 + i %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>