

<div class = "row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Country</th>
        <th>Number</th>
        <th>Experience</th>
        <th>No. significant</th>
        <th>Hr</th>
      </tr>
      </thead>
      <tbody>
      <% @country_array.each do |c, a| %>
          <tr>
            <td><%= c %></td>
            <td><%= a[0] %></td>
            <td><%= a[1] %></td>
            <td><%= a[2] %></td>
            <td><%= a[3][0] %>
              <% if a[0] > 2 %>
                  (<%= a[3][1] %>-<%= a[3][2] %>)</td>
              <% end %>

          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

